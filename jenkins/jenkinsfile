pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {

                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                    // Added GOCACHE and HOME to the environment variables
                    args '-v jenkins-docker-certs:/certs/client:ro ' +
                        '--env GOCACHE=/tmp/.cache/go-build ' +
                        '--env HOME=/tmp'
                }

            }
            steps {
                dir('bugtracker-backend'){
                    sh 'go test -v ./...'
                }
            }
        }
    }
}
